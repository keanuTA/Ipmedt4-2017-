<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/main_header_selector"
    tools:showIn="@layout/activity_traject_keuze">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/simpeleBreuk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:padding="10px"
                    android:textColor="@color/white"
                    android:text="@string/simpeleBreuk"
                    android:textAlignment="center"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/herstelStatus"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:background="@color/greenDark"
                            android:gravity="center_vertical"
                            android:padding="10px"
                            android:text="@string/herstel"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="15dp" />


                        <TextView
                            android:id="@+id/geschatteTijd"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:background="#5979FF"
                            android:gravity="center_vertical"

                            android:padding="10px"
                            android:text="Nog 4 weken te gaan"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="15dp" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:padding="10dp">

                </android.support.v7.widget.RecyclerView>

                <Button
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/greenDark"
                    android:text="Opslaan"
                    android:textColor="#fff"
                    android:visibility="gone" />

        </LinearLayout>


</RelativeLayout>
