<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_header_selector"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.solutions.guidedrecovery.ipmedt4.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_enkelvoudig"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"

        android:onClick="toTraject"
        android:visibility="visible"
        app:cardElevation="5dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/enkvoudigText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|left|right|center_vertical|center_horizontal"
            android:background="@color/rood"
            android:gravity="bottom"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="@string/enkelvoudigeBreuk"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/enkelvoudig_image"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:contentDescription="icoontje"
            android:gravity="center_vertical"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            app:srcCompat="@mipmap/enkvoudig_icon"
            tools:ignore="HardcodedText" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_meervoudig"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"

        android:onClick="toTraject"
        android:visibility="visible"
        app:cardElevation="5dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/card_view_enkelvoudig">

        <TextView
            android:id="@+id/meervoudigText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|left|right|center_vertical|center_horizontal"
            android:background="@color/rood"
            android:gravity="bottom"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="@string/meervoudigeBreuk"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textColorLink="@color/rood"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/meervoudig_image"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:contentDescription="icoontje"
            android:gravity="center_vertical"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            app:srcCompat="@mipmap/meervoudig_icon" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_onbekend"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"

        android:onClick="toVoorTraject"
        android:visibility="visible"
        app:cardElevation="5dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/card_view_meervoudig">

        <TextView
            android:id="@+id/onbekendText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|left|right|center_vertical|center_horizontal"
            android:background="@color/rood"
            android:gravity="bottom"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="@string/onbekendeBreuk"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/image_onbekend"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:contentDescription="icoontje"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            app:srcCompat="@mipmap/vraagteken_icon" />


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>